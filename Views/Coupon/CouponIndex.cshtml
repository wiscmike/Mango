@model IEnumerable<CouponDto>

<head>
	<style>
		a i.fa-trash {
			color: #dc3545; /* Default red */
			transition: transform 0.2s, color 0.2s ease-in-out;
		}

		a:hover i.fa-trash {
			color: #b02a37; /* Slightly darker red */
			transform: scale(1.2); /* Slight zoom effect */
		}

		a:active i.fa-trash {
			color: #ff4d4d; /* Lighter red */
			transform: scale(0.9); /* Slight press effect */
		}

		a i.fa-pencil {
			color: #28a745; /* Default green */
			transition: transform 0.2s, color 0.2s ease-in-out;
		}

		a:hover i.fa-pencil {
			color: #218838; /* Slightly darker green */
			transform: scale(1.2); /* Slight zoom effect */
		}

		a:active i.fa-pencil {
			color: #71dd8a; /* Lighter green */
			transform: scale(0.9); /* Slight press effect */
		}
	</style>

</head>
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Coupons List</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Coupon</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Coupon Code
					</th>
					<th>
						Discount Amount
					</th>
					<th>
						Minimum Amount
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var coupon in Model)
				{
				<tr>
					<td>
						@coupon.CouponCode
					</td>
					<td>
						@(coupon.DiscountAmount.ToString("c"))
					</td>
					<td>
						@(coupon.MinAmount.ToString("c"))
					</td>
					<td>
						<a asp-action="CouponEdit" asp-route-couponId="@coupon.CouponId" title="Edit Coupon" class="me-3">
							<i class="fa fa-pencil"></i>
						</a>
						<a asp-action="CouponDelete" asp-route-couponId="@coupon.CouponId" title="Delete Coupon">
							<i class="fa fa-trash"></i>
						</a>
					</td>
				</tr>
				}
			</tbody>
		</table>

	</div>

</div>